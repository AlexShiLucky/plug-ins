<plugin>

   <extension
         point="org.eclipse.cdt.managedbuilder.core.buildDefinitions">
      <managedBuildRevision
            fileVersion="4.0.0">
      </managedBuildRevision>
      <toolChain
            archList="all"
            configurationEnvironmentSupplier="ilg.eclipse.cdt.internal.build.cross.gnu.arm.CrossEnvironmentVariableSupplier"
            id="cdt.managedbuild.toolchain.cross.gnu.arm.base"
            isAbstract="false"
            name="%toolChain.name"
            targetTool="cdt.managedbuild.tool.cross.gnu.arm.c.linker;cdt.managedbuild.tool.cross.gnu.arm.cpp.linker;cdt.managedbuild.tool.gnu.archiver"
            osList="all">
         <targetPlatform
               archList="all"
               binaryParser="org.eclipse.cdt.core.ELF"
               id="cdt.managedbuild.targetPlatform.cross.gnu.arm"
               isAbstract="false"
               osList="all">
         </targetPlatform>
         <builder
               id="cdt.managedbuild.builder.cross.gnu.arm"
               superClass="cdt.managedbuild.target.gnu.builder">
         </builder>
         <optionCategory
               id="cdt.managedbuild.optionCategory.cross.gnu.arm.settings"
               name="%optionCategory.name">
         </optionCategory>
         <option
               category="cdt.managedbuild.optionCategory.cross.gnu.arm.settings"
               id="cdt.managedbuild.option.cross.gnu.arm.prefix"
               isAbstract="false"
               name="%option.prefix"
               resourceFilter="all"
               valueType="string">
         </option>
         <option
               browseType="directory"
               category="cdt.managedbuild.optionCategory.cross.gnu.arm.settings"
               id="cdt.managedbuild.option.cross.gnu.arm.path"
               isAbstract="false"
               name="%option.path"
               resourceFilter="all"
               valueType="string">
         </option>
         <tool
               commandLineGenerator="ilg.eclipse.cdt.internal.build.cross.gnu.arm.CrossCommandLineGenerator"
               id="cdt.managedbuild.tool.cross.gnu.arm.c.compiler"
               isAbstract="false"
               name="%tool.gcc.compiler"
               superClass="cdt.managedbuild.tool.gnu.c.compiler">
         </tool>
         <tool
               commandLineGenerator="ilg.eclipse.cdt.internal.build.cross.gnu.arm.CrossCommandLineGenerator"
               id="cdt.managedbuild.tool.cross.gnu.arm.cpp.compiler"
               isAbstract="false"
               name="%tool.gpp.compiler"
               superClass="cdt.managedbuild.tool.gnu.cpp.compiler">
         </tool>
         <tool
               commandLineGenerator="ilg.eclipse.cdt.internal.build.cross.gnu.arm.CrossCommandLineGenerator"
               id="cdt.managedbuild.tool.cross.gnu.arm.c.linker"
               isAbstract="false"
               name="%tool.gcc.linker"
               superClass="cdt.managedbuild.tool.gnu.c.linker">
            <enablement
                  type="ALL">
               <not>
                  <checkBuildProperty
                        property="org.eclipse.cdt.build.core.buildArtefactType"
                        value="org.eclipse.cdt.build.core.buildArtefactType.staticLib">
                  </checkBuildProperty>
               </not>
            </enablement>
         </tool>
         <tool
               commandLineGenerator="ilg.eclipse.cdt.internal.build.cross.gnu.arm.CrossCommandLineGenerator"
               id="cdt.managedbuild.tool.cross.gnu.arm.cpp.linker"
               isAbstract="false"
               name="%tool.gpp.linker"
               superClass="cdt.managedbuild.tool.gnu.cpp.linker">
            <enablement
                  type="ALL">
               <not>
                  <checkBuildProperty
                        property="org.eclipse.cdt.build.core.buildArtefactType"
                        value="org.eclipse.cdt.build.core.buildArtefactType.staticLib">
                  </checkBuildProperty>
               </not>
            </enablement>
         </tool>
         <tool
               commandLineGenerator="ilg.eclipse.cdt.internal.build.cross.gnu.arm.CrossCommandLineGenerator"
               id="cdt.managedbuild.tool.cross.gnu.arm.archiver"
               isAbstract="false"
               name="%tool.gcc.archiver"
               superClass="cdt.managedbuild.tool.gnu.archiver">
            <enablement
                  type="ALL">
               <checkBuildProperty
                     property="org.eclipse.cdt.build.core.buildArtefactType"
                     value="org.eclipse.cdt.build.core.buildArtefactType.staticLib">
               </checkBuildProperty>
            </enablement>
         </tool>
         <tool
               commandLineGenerator="ilg.eclipse.cdt.internal.build.cross.gnu.arm.CrossCommandLineGenerator"
               id="cdt.managedbuild.tool.cross.gnu.arm.assembler"
               isAbstract="false"
               name="%tool.gcc.assembler"
               superClass="cdt.managedbuild.tool.gnu.assembler">
         </tool>
      </toolChain>
	     <projectType
	        buildArtefactType="org.eclipse.cdt.build.core.buildArtefactType.exe"
	        id="cdt.managedbuild.target.cross.gnu.arm.exe"
	        isAbstract="false"
	        isTest="false"
	        >                                  
	     <configuration
	           name="Debug"
	           cleanCommand="rm -rf"
	           id="cdt.managedbuild.config.cross.gnu.arm.exe.debug"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.debug">
	           <toolChain
	           		 superClass="cdt.managedbuild.toolchain.cross.gnu.arm.base"
	                 id="cdt.managedbuild.toolchain.cross.gnu.arm.exe.debug">
	           </toolChain>                                   
	     </configuration>
	     <configuration
	           name="Release"
	           cleanCommand="rm -rf"
	           id="cdt.managedbuild.config.cross.gnu.arm.exe.release"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.release">
	           <toolChain
	                 superClass="cdt.managedbuild.toolchain.cross.gnu.arm.base"
	                 id="cdt.managedbuild.toolchain.cross.gnu.arm.exe.release">
	           </toolChain>                                                     
	     </configuration>
	  </projectType>              
	     
	  <projectType
	        buildArtefactType="org.eclipse.cdt.build.core.buildArtefactType.sharedLib"
	        id="cdt.managedbuild.target.cross.gnu.arm.so"
	        isAbstract="false"
	        isTest="false"
	        >            
	     <configuration
	           name="Debug"
	           cleanCommand="rm -rf"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.debug"
	           id="cdt.managedbuild.config.cross.gnu.arm.so.debug">
	           <toolChain
	                 superClass="cdt.managedbuild.toolchain.cross.gnu.arm.base"
	                 id="cdt.managedbuild.toolchain.cross.gnu.arm.so.debug">
	           </toolChain>                                                     
	     </configuration>
	     <configuration
	           name="Release"
	           cleanCommand="rm -rf"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.release"
	           id="cdt.managedbuild.config.cross.gnu.arm.so.release">               
	           <toolChain
	                 superClass="cdt.managedbuild.toolchain.cross.gnu.arm.base"
	                 id="cdt.managedbuild.toolchain.cross.gnu.arm.so.release">
	           </toolChain>                                                                                
	     </configuration>
	  </projectType>
	                   
	  <projectType
	        buildArtefactType="org.eclipse.cdt.build.core.buildArtefactType.staticLib"
	        id="cdt.managedbuild.target.cross.gnu.arm.lib"
	        isAbstract="false"
	        isTest="false"
	        >            
	     <configuration
	           name="Debug"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.debug"
	           cleanCommand="rm -rf"
	           id="cdt.managedbuild.config.cross.gnu.arm.lib.debug">
	           <toolChain
	                 superClass="cdt.managedbuild.toolchain.cross.gnu.arm.base"
	                 id="cdt.managedbuild.toolchain.cross.gnu.arm.lib.debug">
	           </toolChain>                                                                                				               				  
	     </configuration>
	     <configuration
	           name="Release"
	           parent="cdt.managedbuild.config.gnu.base"
	           buildProperties="org.eclipse.cdt.build.core.buildType=org.eclipse.cdt.build.core.buildType.release"
	           cleanCommand="rm -rf"
	           id="cdt.managedbuild.config.cross.gnu.arm.lib.release">
	           <toolChain
	                 superClass="cdt.managedbuild.toolchain.cross.gnu.arm.base"
	                 id="cdt.managedbuild.toolchain.cross.gnu.arm.lib.release">
			</toolChain>                                                                                				                    
         </configuration>         
      </projectType>
   </extension>
   <extension
         point="org.eclipse.cdt.core.templateAssociations">
      <template
            id="org.eclipse.cdt.build.core.templates.HelloWorldCAnsiProject">
         <toolChain
               id="cdt.managedbuild.toolchain.cross.gnu.arm.base">
         </toolChain>
      </template>
      <template
            id="org.eclipse.cdt.build.core.templates.HelloWorldCCProject">
         <toolChain
               id="cdt.managedbuild.toolchain.cross.gnu.arm.base">
         </toolChain>
      </template>
   </extension>
   <extension
         point="org.eclipse.cdt.managedbuilder.ui.newWizardPages">
      <wizardPage
            ID="ilg.eclipse.cdt.build.cross.gnu.arm.setCrossCommandWizardPage"
            operationClass="ilg.eclipse.cdt.internal.build.cross.gnu.arm.SetCrossCommandOperation"
            pageClass="ilg.eclipse.cdt.internal.build.cross.gnu.arm.SetCrossCommandWizardPage">
         <toolchain
               toolchainID="cdt.managedbuild.toolchain.cross.gnu.arm.exe.debug">
         </toolchain>
         <toolchain
               toolchainID="cdt.managedbuild.toolchain.cross.gnu.arm.exe.release">
         </toolchain>
         <toolchain
               toolchainID="cdt.managedbuild.toolchain.cross.gnu.arm.so.debug">
         </toolchain>
         <toolchain
               toolchainID="cdt.managedbuild.toolchain.cross.gnu.arm.so.release">
         </toolchain>
         <toolchain
               toolchainID="cdt.managedbuild.toolchain.cross.gnu.arm.lib.debug">
         </toolchain>
         <toolchain
               toolchainID="cdt.managedbuild.toolchain.cross.gnu.arm.lib.release">
         </toolchain>
      </wizardPage>
   </extension>
</plugin>
