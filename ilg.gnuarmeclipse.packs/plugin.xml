<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.eclipse.cdt.ui.preferences.CPluginPreferencePage"
            id="ilg.gnuarmeclipse.packs.ui.preferencePage.packages"
            class="ilg.gnuarmeclipse.packs.ui.preferences.FolderPage"
            name="Packages">
      </page>
      <page
            category="ilg.gnuarmeclipse.packs.ui.preferencePage.packages"
            class="ilg.gnuarmeclipse.packs.ui.preferences.SitesPage"
            id="ilg.gnuarmeclipse.packs.ui.preferences.SitesPage"
            name="Sites">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="ilg.gnuarmeclipse.packs.ui.preferences.FolderInitializer">
      </initializer>
      <initializer
            class="ilg.gnuarmeclipse.packs.ui.preferences.SitesInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="ilg.gnuarmeclipse.packs.ui.perspectives.PacksPerspective"
            icon="icons/packages.png"
            id="ilg.gnuarmeclipse.packs.ui.perspectives.PacksPerspective"
            name="C/C++ Packs">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="ilg.gnuarmeclipse.packs"
            name="C/C++ Packs">
      </category>
      <view
            allowMultiple="false"
            category="ilg.gnuarmeclipse.packs"
            class="ilg.gnuarmeclipse.packs.ui.views.DevicesView"
            icon="icons/hardware_chip.png"
            id="ilg.gnuarmeclipse.packs.ui.views.DevicesView"
            name="Devices">
      </view>
      <view
            allowMultiple="false"
            category="ilg.gnuarmeclipse.packs"
            class="ilg.gnuarmeclipse.packs.ui.views.BoardsView"
            icon="icons/board.png"
            id="ilg.gnuarmeclipse.packs.ui.views.BoardsView"
            name="Boards">
      </view>
      <view
            allowMultiple="false"
            category="ilg.gnuarmeclipse.packs"
            class="ilg.gnuarmeclipse.packs.ui.views.KeywordsView"
            icon="icons/info_obj.png"
            id="ilg.gnuarmeclipse.packs.ui.views.KeywordsView"
            name="Keywords">
      </view>
      <view
            allowMultiple="false"
            category="ilg.gnuarmeclipse.packs"
            class="ilg.gnuarmeclipse.packs.ui.views.PacksView"
            icon="icons/packages.png"
            id="ilg.gnuarmeclipse.packs.ui.views.PackagesView"
            name="Packs">
      </view>
      <view
            allowMultiple="false"
            category="ilg.gnuarmeclipse.packs"
            class="ilg.gnuarmeclipse.packs.ui.views.OutlineView"
            icon="icons/outline_co.png"
            id="ilg.gnuarmeclipse.packs.ui.views.OutlineView"
            name="Outline"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="ilg.gnuarmeclipse.packs.commands.category"
            name="Packages Category">
      </category>
      <command
            categoryId="ilg.gnuarmeclipse.packs.commands.category"
            id="ilg.gnuarmeclipse.packs.commands.refreshCommand"
            name="Refresh">
      </command>
      <command
            categoryId="ilg.gnuarmeclipse.packs.commands.category"
            id="ilg.gnuarmeclipse.packs.commands.showPerspectiveCommand"
            name="Switch to C/C++ Packs Perspective">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ilg.gnuarmeclipse.packs.handlers.RefreshHandler"
            commandId="ilg.gnuarmeclipse.packs.commands.refreshCommand">
      </handler>
      <handler
            class="ilg.gnuarmeclipse.packs.handlers.ShowPerspectiveHandler"
            commandId="ilg.gnuarmeclipse.packs.commands.showPerspectiveCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="ilg.gnuarmeclipse.packs.toolbar.main.showPerspective">
            <command
                  commandId="ilg.gnuarmeclipse.packs.commands.showPerspectiveCommand"
                  icon="icons/packages.png"
                  style="push"
                  tooltip="Make the C/C++ Packs perspective visible">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   
</plugin>
